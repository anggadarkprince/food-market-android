<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.detail.PaymentSuccessFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_success_order" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Theme.FoodMarket.TextView.PoppinsNormal20Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="You've Made Order" />

    <TextView
        android:id="@+id/tvSubtitle"
        style="@style/Theme.FoodMarket.TextView.PoppinsNormal14Grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Just stay at home while we are\npreparing your food"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnOtherFood"
        style="@style/Theme.FoodMarket.Button.Primary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Order Other Food"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnMyOrder"
        style="@style/Theme.FoodMarket.Button.Secondary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="View My Order"
        android:textAllCaps="false" />

</LinearLayout>