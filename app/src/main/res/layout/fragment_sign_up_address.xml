<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.auth.signup.SignUpAddressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingTop="26dp"
        android:paddingEnd="24dp">

        <TextView
            style="@style/Theme.FoodMarket.TextView.PoppinsNormal16Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Phone Number" />

        <EditText
            android:id="@+id/etPhoneNumber"
            style="@style/Theme.FoodMarket.EditText.PoppinsNormal16Gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_rectangle_outline_8_020202"
            android:hint="Type your phone number"
            android:padding="10dp" />

        <TextView
            style="@style/Theme.FoodMarket.TextView.PoppinsNormal16Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Address" />

        <EditText
            android:id="@+id/etAddress"
            style="@style/Theme.FoodMarket.EditText.PoppinsNormal16Gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_rectangle_outline_8_020202"
            android:hint="Type your full address"
            android:padding="10dp" />

        <TextView
            style="@style/Theme.FoodMarket.TextView.PoppinsNormal16Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="City" />

        <EditText
            android:id="@+id/etCity"
            style="@style/Theme.FoodMarket.EditText.PoppinsNormal16Gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_rectangle_outline_8_020202"
            android:hint="Type your city location"
            android:padding="10dp" />

        <TextView
            style="@style/Theme.FoodMarket.TextView.PoppinsNormal16Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Country" />

        <EditText
            android:id="@+id/etCountry"
            style="@style/Theme.FoodMarket.EditText.PoppinsNormal16Gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_rectangle_outline_8_020202"
            android:hint="Type country of the city"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnSignUpNow"
            style="@style/Theme.FoodMarket.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Sign Up Now"
            android:textAllCaps="false" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>